{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // These options are necessary so that TypeDoc can resolve references across packages
    "declaration": true,
    "declarationMap": true
  }
}